# Source MongoDB (исходная база данных с товарами)
SOURCE_MONGODB_URL=mongodb://source-mongo:27017
SOURCE_MONGODB_DATABASE=source_products
SOURCE_COLLECTION_NAME=products

# Target MongoDB (наша новая база для классификации)
TARGET_MONGODB_URL=mongodb://target-mongo:27017
TARGET_MONGODB_DATABASE=okpd_classifier

# Redis
REDIS_URL=redis://redis:6379

# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20241022

# Processing settings
MIGRATION_BATCH_SIZE=1000
CLASSIFICATION_BATCH_SIZE=50
MAX_WORKERS=5

# API Security
API_KEY=your_secure_api_key_here