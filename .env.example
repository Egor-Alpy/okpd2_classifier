# Source MongoDB (исходная база данных с товарами - только чтение)
SOURCE_MONGO_HOST=
SOURCE_MONGO_PORT=27017
SOURCE_MONGO_USER=
SOURCE_MONGO_PASS=
SOURCE_MONGO_AUTHSOURCE=
SOURCE_MONGO_AUTHMECHANISM=SCRAM-SHA-256
SOURCE_MONGO_DIRECT_CONNECTION=false
SOURCE_MONGODB_DATABASE=
SOURCE_COLLECTION_NAME=

# Target MongoDB (наша новая база для классификации)
TARGET_MONGO_HOST=localhost
TARGET_MONGO_PORT=27017
TARGET_MONGO_USER=
TARGET_MONGO_PASS=
TARGET_MONGO_AUTHSOURCE=
TARGET_MONGO_AUTHMECHANISM=SCRAM-SHA-256
TARGET_MONGO_DIRECT_CONNECTION=false
TARGET_MONGODB_DATABASE=okpd_classifier

# Redis
REDIS_URL=redis://localhost:6379

# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# Используйте более быструю модель для избежания rate limit:
# - claude-3-haiku-20240307 (самая быстрая и дешевая)
# - claude-3-5-sonnet-20240620 (сбалансированная)
# - claude-3-opus-20240229 (самая мощная, но медленная)
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Processing settings
MIGRATION_BATCH_SIZE=1000
# Уменьшите размер батча для избежания rate limit!
CLASSIFICATION_BATCH_SIZE=10  # Было 50, теперь 10
MAX_WORKERS=1  # Уменьшите количество воркеров до 1!

# Rate limit settings
RATE_LIMIT_DELAY=10  # Задержка между батчами в секундах
MAX_RETRIES=3  # Количество попыток при rate limit

# API Security
API_KEY=your_secure_api_key_here