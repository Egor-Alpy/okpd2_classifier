# Source MongoDB (исходная база данных с товарами - только чтение)
SOURCE_MONGO_HOST=
SOURCE_MONGO_PORT=27017
SOURCE_MONGO_USER=
SOURCE_MONGO_PASS=
SOURCE_MONGO_AUTHSOURCE=
SOURCE_MONGO_AUTHMECHANISM=SCRAM-SHA-256
SOURCE_MONGO_DIRECT_CONNECTION=false
SOURCE_MONGODB_DATABASE=
SOURCE_COLLECTION_NAME=

# Target MongoDB (наша новая база для классификации)
TARGET_MONGO_HOST=localhost
TARGET_MONGO_PORT=27017
TARGET_MONGO_USER=
TARGET_MONGO_PASS=
TARGET_MONGO_AUTHSOURCE=
TARGET_MONGO_AUTHMECHANISM=SCRAM-SHA-256
TARGET_MONGO_DIRECT_CONNECTION=false
TARGET_MONGODB_DATABASE=okpd_classifier

# Redis
REDIS_URL=redis://localhost:6379

# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# Используем Claude 3.7 Sonnet для эффективного prompt caching
# cache_read_input_tokens не учитываются в ITPM лимите!
ANTHROPIC_MODEL=claude-3-7-sonnet-20250105

# Prompt caching settings
ENABLE_PROMPT_CACHING=true
CACHE_TTL_MINUTES=5

# Proxy settings for Anthropic API (опционально)
# Используйте если нужен VPN/прокси только для Anthropic
# Примеры:
# HTTP_PROXY=http://your-proxy:8080
# HTTPS_PROXY=http://your-proxy:8080
# SOCKS_PROXY=socks5://your-proxy:1080
# Для аутентификации: http://user:pass@your-proxy:8080
HTTP_PROXY=
HTTPS_PROXY=
SOCKS_PROXY=

# Processing settings
MIGRATION_BATCH_SIZE=1000
# Увеличенный размер батча для эффективного использования кэша
# С кэшированием можем обрабатывать 300+ товаров за раз
CLASSIFICATION_BATCH_SIZE=300
MAX_WORKERS=1

# Rate limit settings
RATE_LIMIT_DELAY=6  # Задержка между батчами в секундах
MAX_RETRIES=3  # Количество попыток при rate limit

# API Security
API_KEY=your_secure_api_key_here